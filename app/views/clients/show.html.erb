<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<h3>Pets</h3>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Max height (in cm)</th>
    <th>Max weight (in kg)</th>
  </tr>
  </thead>
  <tbody>
  <% @client.pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.max_height %></td>
      <td><%= pet.max_weight %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>

