  <div class="field">
    <%= form.label :condition %>
    <%= form.text_field :condition %>
  </div>

  <div class="field">
    <%= form.label :diagnostic %>
    <%= form.text_field :diagnostic %>
  </div>

  <div class="field">
    <%= form.label :height, 'Height (in cm)' %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%= form.label :weight, 'Weight (in kg)' %>
    <%= form.number_field :weight %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
