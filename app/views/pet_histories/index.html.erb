<p id="notice"><%= notice %></p>

<h1>Pet Histories <%= !params[:pet_id].blank? ? "(#{@pet.name})" : "" %></h1>

<table>
  <thead>
    <tr>
      <th>Pet</th>
      <th>Condition</th>
      <th>Diagnostic</th>
      <th>Height (in cm)</th>
      <th>Weight (in kg)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.pet.name %></td>
        <td><%= pet_history.condition %></td>
        <td><%= pet_history.diagnostic %></td>
        <td><%= pet_history.height %></td>
        <td><%= pet_history.weight %></td>
        <td><%= link_to 'Show', pet_history %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(pet_history) %></td>
        <td><%= link_to 'Destroy', pet_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet History', new_pet_history_path %> |
<%= link_to 'Pets', pets_path %> |
