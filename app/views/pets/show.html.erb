<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @pet.birthday.strftime('%d/%m/%Y') %>
</p>

<p>
  <strong>Average height:</strong>
  <%= @pet.average_height %>
</p>

<p>
  <strong>Average weight:</strong>
  <%= @pet.average_weight %>
</p>

<p>
  <strong>Maximum height:</strong>
  <%= @pet.max_height %>
</p>

<p>
  <strong>Maximum weight:</strong>
  <%= @pet.max_weight %>
</p>

<h3>History</h3>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Height (in cm)</th>
      <th>Weight (in kg)</th>
    </tr>
  </thead>
  <tbody>
    <% @pet.pet_histories.each do |history| %>
    <tr>
      <td><%= history.created_at.strftime('%d/%m/%Y') %></td>
      <td><%= history.height %></td>
      <td><%= history.weight %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
